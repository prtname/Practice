<Window x:Class="Practice.Windows.Code"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice.Windows"
        mc:Ignorable="d" Height="150" Width="350" 
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="28"
                   Foreground="{StaticResource PrimaryColor}"
                   Name="CodeTxtBlc">
        </TextBlock>
        <TextBlock Grid.Row="1">
            После закрытия окна у Вас будет 10 секунд для ввода кода
        </TextBlock>
    </Grid>
</Window>
